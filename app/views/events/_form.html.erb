<% if @event.errors.any? %>
  <ul>
    <% @event.errors.full_messages.each do |msg| %>
      <li><div class="alert alert-danger" role="alert">
          <%= msg %>
        </div>
      </li>
    <% end %>
  </ul>
<% end %>
<p>
<%= f.label:name, "Name" %>
<%= f.text_field :name %>
</p>
<div class="form-group">
  <%= f.label:description, "Context" %>
  <%= f.text_area :description %>
</div>
