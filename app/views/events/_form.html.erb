<% if @event.errors.any? %>
  <ul>
    <% @event.errors.full_messages.each do |msg| %>
      <li><div class="alert alert-danger" role="alert">
          <%= msg %>
        </div>
      </li>
    <% end %>
  </ul>
<% end %>

<%= f.label:name, "Name" %>
<%= f.text_field :name %>

<%= f.label:description, "Context" %>
<%= f.text_area :description %>
